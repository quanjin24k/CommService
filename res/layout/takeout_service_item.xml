<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/takeout_business_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/takeout_goods_pic" />

        <TextView
            android:id="@+id/takeout_business_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="休息中" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_takeout_item_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6" >

            
            <TextView
                android:id="@+id/tv_takeout_business_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="MR.POTATO 土豆专门店" />

            <TextView
                android:id="@+id/tv_takeout_business_tips_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_takeout_business_name"
                android:layout_marginTop="5dp"
                android:text="0元起送   闪电送达" />

            <TextView
                android:id="@+id/tv_takeout_business_tips_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_takeout_business_tips_1"
                android:layout_marginTop="5dp"
                android:text="0-20(配送费3元) | 20-以上(免费)" />

            <ImageView
                android:id="@+id/iv_takeout_business_phone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/phone_circle_icon" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_takeout_item_net_service"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="4" >

            <LinearLayout
                android:id="@+id/ll_takeout_item_net_service_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_takeout_item_net_service_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_new_bg" />

                <TextView
                    android:id="@+id/tv_takeout_item_net_service_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="微信、支付宝、手机QQ在线支付乐享9.5折;" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_takeout_item_net_service_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_below="@id/ll_takeout_item_net_service_1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_takeout_item_net_service_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_discount_bg" />

                <TextView
                    android:id="@+id/tv_takeout_item_net_service_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="新店开业,满百赠20元代金券." />
            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="10dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>